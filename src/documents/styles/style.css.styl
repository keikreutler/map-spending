a, a:link
	cursor pointer

body
	margin 0
	padding 0
	font-family 'Yanone Kaffeesatz', sans-serif
	text-transform uppercase

a
	color #000

a:hover
	color #CCC
	text-decoration none

table
	tfoot, tbody
		th
			border-top 1px solid #DDD

label
	font-weight normal
	font-size 12px
	text-transform none
	span
		padding-left 5px

#map
	width 100%
	height 100vh
	font-family 'Open Sans'
	h1, h2, h3, h4, h5, h6
		font-family 'Yanone Kaffeesatz', sans-serif
		text-transform uppercase
	p
		font-size 12px
	.leaflet-popup-content-wrapper
		border 0
		width 150px
		padding 0
	.leaflet-popup-content
		width 150px
		padding 0
		border 0
	.leaflet-control-layers
		border none
	.leaflet-control-layers-selector
		background-image none
		background #FFF
	.category
		background #000
		color #FFF
		padding 10px
		width 100%
		border none
		h1
			margin 0
			text-align center
	.description
		padding 5px
		text-transform none
		font-size 12px

.container
	margin 0
	padding 0
	width 100vw

.content
	margin 0
	padding 0
	width 100vw

#content
	margin 0
	padding 0

.navbar
	background #FFF
	margin 0
	text-align center
	a
		display block
		margin-left auto
		margin-right auto
		text-align center
	.title
		font-size 30px
		padding 20px 0
